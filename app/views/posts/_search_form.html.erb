<%= form_tag(posts_path, method: "get", class: "search_form") do %>

  <div>
    <%= label_tag :query %>
    <%=
      search_field_tag(
        :query,
        params["query"],
        placeholder: "Search Housing Posts",
        class: "search_field"
      )
    %>

    <%= label_tag :location %>
    <%=
      search_field_tag(
        :location,
        params["location"],
        placeholder: "Location",
        class: "search_field"
      )
    %>
  </div>

  <div>

    <%= label_tag :available_or_needed_needed, "Housing Needed" %>
    <%=
      radio_button_tag(
        :available_or_needed,
        :needed,
        params[:available_or_needed] == "needed"
      )
    %>

    <%=
      radio_button_tag(
        :available_or_needed,
        :available,
        params[:available_or_needed] != "needed"
      )
    %>
    <%= label_tag :available_or_needed_available, "Housing Available", class: "search_submit"%>

  </div>

  <%= submit_tag "Search", class: "search_submit" %>
<% end %>
